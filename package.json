{
  "name": "prng-guide-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run build:rng_tools && bunx --bun vite --force",
    "format": "bun prettier . --write",
    "build": "tsc -b && bunx --bun vite build && cp dist/index.html dist/404.html && cp dist/sw.js dist/sw.ts && bun run build-seo.ts",
    "build:guides": "bun run build-guides.ts && bun run format",
    "build:rng_tools": "wasm-pack build rng_tools && bun i",
    "lint": "bun run lint:types && bun run lint:code && bun run lint:format",
    "lint:code": "eslint .",
    "lint:format": "bun prettier . --check",
    "lint:types": "bun tsc -b",
    "lint:links": "find guides -name \\*.mdx -print0 | xargs -0 -n1 bun run markdown-link-check -c markdown-link-check.config.json -q",
    "preview": "vite preview",
    "test:e2e": "bunx cypress run --browser chrome",
    "cypress:open": "bunx cypress open"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.11.11",
    "@ant-design/icons": "^5.6.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mdx-js/react": "^3.1.0",
    "antd": "^5.24.0",
    "comlink": "^4.4.2",
    "dayjs": "^1.11.13",
    "formik": "^2.4.6",
    "jotai": "^2.12.0",
    "lodash-es": "^4.17.21",
    "md5": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "rng_tools": "./rng_tools/pkg",
    "ts-pattern": "^5.6.2",
    "ts-toolbelt": "^9.6.0",
    "wouter": "^3.5.1",
    "zod": "^3.24.1",
    "zod-formik-adapter": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@mdx-js/rollup": "^3.1.0",
    "@types/bun": "^1.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/md5": "^2.3.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cheerio": "^1.0.0",
    "cypress": "^14.3.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "markdown-link-check": "3.12.2",
    "prettier": "3.5.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^5.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-wasm": "^3.4.1"
  }
}
