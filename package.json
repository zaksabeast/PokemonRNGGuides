{
  "name": "prng-guide-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run build:rng_tools && bun run scripts/dev-server",
    "format": "bun prettier . --write",
    "build": "bun run build:client && bun run build:prerender && bun run minimize-css",
    "build:client": "NODE_ENV=production bunx --bun vite build && cp dist/index.html dist/404.html && cp dist/sw.js dist/sw.ts",
    "build:prerender": "bun run build:server && NODE_ENV=production bun run scripts/prerender && bun run build:server:clean",
    "build:server": "NODE_ENV=production bunx --bun vite build --ssr src/entry-server.jsx --outDir dist/server",
    "build:server:clean": "rm -rf dist/server",
    "build:guides": "bun run scripts/build-guides.tsx",
    "build:guides:force": "bun run scripts/reset-guides.ts && bun run scripts/build-guides.tsx --no-detected-tags && bun run build:guides",
    "build:guides:check": "bun run scripts/build-guides.tsx --check",
    "build:rng_tools": "wasm-pack build rng_tools && bun i --frozen-lockfile",
    "build:wild3": "bun run scripts/wild3/generateWildGameData.ts",
    "minimize-css": "bunx postcss dist/assets/*.css --replace",
    "lint": "bun run lint:types && bun run build:guides:check && bun run lint:code && bun run lint:format",
    "lint:code": "eslint .",
    "lint:format": "bun prettier . --check",
    "lint:types": "bun tsc -b",
    "lint:links": "find guides -name \\*.mdx -print0 | xargs -0 -n1 bun run markdown-link-check -c markdown-link-check.config.json -q",
    "preview": "vite preview",
    "test:e2e": "bunx cypress run --browser chrome",
    "cypress:open": "bunx cypress open",
    "prepare": "husky"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.11.11",
    "@ant-design/icons": "^5.6.1",
    "@dr.pogodin/react-helmet": "^3.0.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mdx-js/react": "^3.1.0",
    "antd": "^5.24.0",
    "comlink": "^4.4.2",
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "formik": "^2.4.6",
    "jotai": "^2.12.0",
    "lodash-es": "^4.17.21",
    "md5": "^2.3.0",
    "p-map": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "rng_tools": "./rng_tools/pkg",
    "ts-pattern": "^5.6.2",
    "ts-toolbelt": "^9.6.0",
    "wouter": "^3.7.0",
    "zod": "^3.24.1",
    "zod-formik-adapter": "^1.3.0"
  },
  "devDependencies": {
    "@ant-design/static-style-extract": "^1.0.3",
    "@emotion/server": "^11.11.0",
    "@eslint/js": "^9.19.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@mdx-js/rollup": "^3.1.0",
    "@types/bun": "^1.2.2",
    "@types/express": "^5.0.1",
    "@types/lodash-es": "^4.17.12",
    "@types/md5": "^2.3.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cheerio": "^1.0.0",
    "cypress": "^14.3.0",
    "eslint": "^9.19.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "markdown-link-check": "3.12.2",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "prettier": "3.5.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^5.0.0",
    "sirv": "^3.0.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-wasm": "^3.4.1"
  }
}
